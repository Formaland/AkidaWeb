{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}
    <h1>Courses</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Namecourses</th>
                <td>{{ entity.namecourses }}</td>
            </tr>
            <tr>
                <th>Durationcourses</th>
                <td>{{ entity.durationcourses|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('courses') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('courses_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
