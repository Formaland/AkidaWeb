{% extends 'PfeWebBundle:Backend:layout.html.twig' %}
{% block content -%}

<p class="mb20"></p>

<div class="table-responsive">

    <table class="table table-bordered mb30">
        <thead>
        <tr>
            <th colspan="4">


                <h4 class="panel-title" align="center">
                    <font color="#008b8b" size="5%" >
                        {{ 'sidebar.Liste des cours'|trans({}, 'backend') }}</font></h4>

            </th>
        </tr>
        <tr>



            <th></th>


           <th>
                {{ 'cours.duree'|trans({}, 'backend') }}
         </th>
            <th>
                {{ 'cours.nom'|trans({}, 'backend') }}
            </th>

            </th>
            <th>
                #
            </th>


        </tr>


        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

                <td class="table-action">

                    <a href="{{ path('courses_edit', { 'id': entity.id }) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <form action="{{ path('courses_delete', { 'id': entity.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        <div style="display: none;"> {{ form_widget(deleteForms[entity.id]) }}</div>
                        <button type="submit" class="fa fa-trash-o">
                            {#  <i class="fa fa-trash-o"></i>#}
                            {#{{ 'links.admin.form.delete' | trans({}, 'FooBundle') }}#}
                        </button>
                    </form>

                </td>
            <td>{% if entity.durationcourses %}{{ entity.durationcourses|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.namecourses }}</td>

                <td><a href="{{ path('courses_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    {% endblock %}