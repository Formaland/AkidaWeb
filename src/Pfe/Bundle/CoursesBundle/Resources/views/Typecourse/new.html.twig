{% extends 'PfeWebBundle:Backend:layout.html.twig' %}
{% block content -%}

<div class="col-md-6">

    <form  action="{{ path('typecourse_create') }}" {{ form_enctype(form) }} method="post">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-btns">
                    <a class="panel-close" href="#">

                        Ã—

                    </a>
                    <a class="minimize" href="#">

                        -

                    </a>
                </div>
                <h4 class="panel-title" align="center">   <font color="#008b8b" size="5%" align="left">
                        {{ 'sidebar.ajouter type'|trans({}, 'backend') }}</font>

                </h4>

            </div>

            <div class="panel-body">
                <div class="form-group">

                    <div class="col-sm-9">
                        {{ form_widget(form.nametypecourse) }}
                        {{ form_errors(form.nametypecourse) }}
                    </div>


                    <label class="col-sm-3 control-label">
                        <font color="red">

                            *
                        </font><font color="black">


                            {{ 'cours.type cours'|trans({}, 'backend') }}</font>

                    </label></div>


                    <div class="form-group">

                        <div class="col-sm-9">
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <label class="col-sm-3 control-label">
                         <font color="black">


                                {{ 'enseignant.description'|trans({}, 'backend') }}</font>

                        </label></div>

                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3" >


                                <button type="submit" class="btn btn-success" id="validercours"><i class="icon-ok icon-white"></i> {{ 'Liens.envoyer'|trans({}, 'backend') }}</button>
                                <button type="reset" class="btn btn-danger" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.annuler'|trans({}, 'backend') }}</button>
                            </div>
                        </div>

                    </div>


                </div>

                {{ form_widget(form._token) }}


            </div></form>






