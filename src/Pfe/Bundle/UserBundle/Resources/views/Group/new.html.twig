{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}

    <div class="col-md-6">

    <form  action="{{ path('group_create') }}"  {{ form_enctype(form) }} method="post">
    <div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-btns">
            <a class="panel-close" href="#">

                ×

            </a>
            <a class="minimize" href="#">

                −

            </a>
        </div>
      <h4 class="panel-title" align="center"><font color="#008b8b" size="5%" align="left">

            {{ 'sidebar.Ajouter groupe'|trans({}, 'backend') }}</font>

        </h4>
    </div>
    <div class="panel-body">
        <div class="form-group">

            <div class="col-sm-9">
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>




            <label class="col-sm-3 control-label">
                <font color="red">

                    *

                </font><font color="black">

                {{ 'groupe.nom'|trans({}, 'backend') }}</font>

            </label></div>
        <div class="form-group">
            <div class="col-sm-9">
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>



            <label class="col-sm-3 control-label">

                <font color="black">
                {{ 'groupe.description'|trans({}, 'backend') }}</font>

            </label>

        </div>



        <div class="form-group">
            <div class="col-sm-9">
                {{ form_widget(form.courses) }}
                {{ form_errors(form.courses) }}
            </div>


            <label class="col-sm-3 control-label">
                <font color="red">
                            *

                        </font><font color="black">

                {{ 'sidebar.Cours'|trans({}, 'backend') }}</font>

            </label>

        </div>




        <div class="panel-footer">

            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">

                    <p align="center"> <button type="submit" class="btn btn-success" id="validergroupe"><i class="icon-ok icon-white"></i> {{ 'Liens.envoyer'|trans({}, 'backend') }}</button></p>


                </div>
            </div>
            <!--

             panel

            -->







        </div></div> </div>

    {{ form_rest(form) }}
    </form></div>

{% endblock %}
