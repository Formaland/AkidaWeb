{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}

    <div class="col-md-6">

    <form id="basicForm" class="form-horizontal" action="{{ path('group_create') }}"  novalidate="novalidate" method="post">
    <div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-btns">
            <a class="panel-close" href="#">

                ×

            </a>
            <a class="minimize" href="#">

                −

            </a>
        </div>
        <h4 class="panel-title">

            {{ 'sidebar.Ajouter groupe'|trans({}, 'backend') }}

        </h4>

    </div>
    <div class="panel-body">
        <div class="form-group">

            <div class="col-sm-9">
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>




            <label class="col-sm-3 control-label">

                {{ 'groupe.nom'|trans({}, 'backend') }}
                <span class="asterisk">

                            *

                        </span>
            </label></div>
        <div class="form-group">
            <div class="col-sm-9">
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>



            <label class="col-sm-3 control-label">
                        <span class="asterisk">

                            *

                        </span>

                {{ 'groupe.description'|trans({}, 'backend') }}

            </label>

        </div>


        <div class="form-group">
            <div class="col-sm-9">
                {{ form_widget(form.date_creation) }}
                {{ form_errors(form.date_creation) }}
            </div>


            <label class="col-sm-3 control-label">
                        <span class="asterisk">

                            *

                        </span>

                {{ 'groupe.datecreation'|trans({}, 'backend') }}

            </label>

        </div>
        <div class="form-group">
            <div class="col-sm-9">
                {{ form_widget(form.date_modification) }}
                {{ form_errors(form.date_modification) }}
            </div>

            <label class="col-sm-3 control-label">
                        <span class="asterisk">

                            *

                        </span>

                {{ 'groupe.datemodification'|trans({}, 'backend') }}

            </label>

        </div>
        <div class="form-group">
            <div class="col-sm-9">
                {{ form_widget(form.courses) }}
                {{ form_errors(form.courses) }}
            </div>


            <label class="col-sm-3 control-label">
                        <span class="asterisk">

                            *

                        </span>

                {{ 'sidebar.Cours'|trans({}, 'backend') }}

            </label>

        </div>




        <div class="panel-footer">

            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">


                    {{ form_widget(form.create) }}

                </div>
            </div>
            <!--

             panel

            -->







        </div></div> </div>

    {{ form_rest(form) }}
    </form></div>

{% endblock %}
