                            {{ 'groupe.description'|trans({}, 'backend') }}

                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(edit_form.courses) }}
                            {{ form_errors(edit_form.courses) }}
                        </div>


                        <label class="col-sm-3 control-label">


                            {{ 'sidebar.Cours'|trans({}, 'backend') }}

                        </label>

                    </div>




                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">


                                {{ form_widget(editform.Modifier) }}

