{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}


<p class="mb20"></p>

<div class="table-responsive">

    <table class="table table-bordered mb30">
        <thead>
        <tr>

            <th colspan="7">


                <h4 class="panel-title" align="center">
                    <font color="#008b8b" size="5%" align="left">
                        {{ 'sidebar.Liste des apprenants'|trans({}, 'backend') }}</font></h4>

            </th>
        </tr>
        <tr>


            <th></th>

            <th><font color="black">
                    {{ 'student.Niveau scolaire'|trans({}, 'backend') }}
                </font> </th>
            <th><font color="black">
                    {{ 'student.Ecole'|trans({}, 'backend') }}
                </font></th>
            <th><font color="black">
                    {{ 'student.Mere'|trans({}, 'backend') }}
                </font></th>
            <th><font color="black">
                    {{ 'student.Pere'|trans({}, 'backend') }}
                </font> </th>




            <th><font color="black">
                    #
                </font>  </th>


        </tr>


        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>

            <tr>


                <td class="table-action">

                    <a href="{{ path('student_edit', { 'id': entity.id }) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <form action="{{ path('student_delete', { 'id': entity.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        <div style="display: none;"> {{ form_widget(deleteForms[entity.id]) }}</div>
                        <button type="submit" class="fa fa-trash-o">
                            {#  <i class="fa fa-trash-o"></i>#}
                            {#{{ 'links.admin.form.delete' | trans({}, 'FooBundle') }}#}
                        </button>
                    </form>

                </td>




            <td>{{ entity.niveauscolaire }}</td>
            <td>{{ entity.ecole }}</td>

            <td>{{ entity.mere }}</td>
            <td>{{ entity.user.getUsername() }}</td>

            <td><a href="{{ path('student_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}