
























{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}


    <div class="col-md-6">

        <form  action="{{ path('hezb_update', { 'id': entity.id }) }}" {{ form_enctype(form) }} method='post'>
            {{ form_start(edit_form) }}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-btns">
                        <a class="panel-close" href="#">

                            Ã—

                        </a>
                        <a class="minimize" href="#">

                            -

                        </a>
                    </div>

                    <h4 class="panel-title" align="center">   <font color="#008b8b" size="5%">
                            {{ 'sidebar.Ajouter hezb'|trans({}, 'backend') }}</font>

                    </h4>

                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-sm-9">
                            {{ form_widget(edit_form.numhezb) }}
                            {{ form_errors(edit_form.numhezb) }}
                        </div>




                        <label class="col-sm-3 control-label"><font color="black">


                                {{ 'hezb.num hezb'|trans({}, 'backend') }}</font>

                        </label></div>
                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(edit_form.sourah) }}
                            {{ form_errors(edit_form.sourah) }}
                        </div>



                        <label class="col-sm-3 control-label">
                            <font color="black">


                                {{ 'sourah.nom'|trans({}, 'backend') }}</font>

                        </label>

                    </div>



                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">

                                <button type="submit" class="btn btn-success" id="validerhezb"><i class="icon-ok icon-white"></i> {{ 'Liens.modifier'|trans({}, 'backend') }}</button>
                                <button type="reset" class="btn btn-danger" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.annuler'|trans({}, 'backend') }}</button>
                            </div>
                        </div>

                    </div>


                </div>




            </div>
            {{ form_end(edit_form) }}
        </form></div>


