{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}
    <div class="col-md-6">

        <form  action="{{ path('classroom_update', { 'id': entity.id }) }}" {{ form_enctype(form) }} method="post">
            {{ form_start(edit_form) }}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-btns">
                        <a class="panel-close" href="#">

                            ×

                        </a>
                        <a class="minimize" href="#">

                            −

                        </a>
                    </div>
                    <h4 class="panel-title" align="center"><font color="#008b8b" size="5%" align="left">

                            {{ 'sidebar.Enregister apprenant'|trans({}, 'backend') }}</font>

                    </h4>

                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-sm-9">
                            <div > {{ form_widget(edit_form.nameclassroom) }}</div>
                            {{ form_errors(edit_form.nameclassroom) }}
                        </div>




                        <label class="col-sm-3 control-label">

                            <font color="red">

                                *

                            </font><font color="black">
                                {{ 'classroom.nom'|trans({}, 'backend') }}</font>

                        </label></div>
                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(edit_form.capacity) }}
                            {{ form_errors(edit_form.capacity) }}
                        </div>



                        <label class="col-sm-3 control-label">
                            <font color="red">
                                *

                            </font><font color="black">

                                {{ 'classroom.capacite'|trans({}, 'backend') }}</font>

                        </label>

                    </div>


                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(edit_form.weeklysession) }}
                            {{ form_errors(edit_form.weeklysession) }}
                        </div>


                        <label class="col-sm-3 control-label">
                            <font color="red">
                                *

                            </font><font color="black">

                                {{ 'seanceheb.nom'|trans({}, 'backend') }}</font>

                        </label>

                    </div>

                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3" >


                                <p>&nbsp;&nbsp;</p>
                                <button type="submit" class="btn btn-success" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.modifier'|trans({}, 'backend') }}</button>
                                <button type="reset" class="btn btn-danger" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.annuler'|trans({}, 'backend') }}</button>
                            </div>
                        </div>



                    </div></div> </div>

            {{ form_end(edit_form) }}
        </form></div>



