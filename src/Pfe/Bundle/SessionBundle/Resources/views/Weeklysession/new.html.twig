{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}

    <div class="col-md-6">

        <form  action="{{ path('weeklysession_create', { 'id': entity.id }) }}"  {{ form_enctype(form) }} method="post">
            {{ form_start(form) }}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-btns">
                        <a class="panel-close" href="#">

                            ×

                        </a>
                        <a class="minimize" href="#">

                            −

                        </a>
                    </div>
                    <h4 class="panel-title" align="center">   <font color="#008b8b" size="5%" align="left">

                            {{ 'sidebar.ajoutweek'|trans({}, 'backend') }}

                        </font>    </h4>

                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-sm-9">
                            {{ form_widget(form.day) }}
                            {{ form_errors(form.day) }}
                        </div>




                        <label class="col-sm-3 control-label">


                            {{ 'seanceheb.day'|trans({}, 'backend') }}

                        </label></div>
                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.starttime) }}
                            {{ form_errors(form.starttime) }}
                        </div>



                        <label class="col-sm-3 control-label">


                            {{ 'examen.heure deb'|trans({}, 'backend') }}

                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.endtime) }}
                            {{ form_errors(form.endtime) }}
                        </div>



                        <label class="col-sm-3 control-label">


                            {{ 'examen.heure fin'|trans({}, 'backend') }}

                        </label>

                    </div>




                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">

                                <p>&nbsp;&nbsp;</p>
                                <button type="submit" class="btn btn-success" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.envoyer'|trans({}, 'backend') }}</button>
                                <button type="reset" class="btn btn-danger" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.annuler'|trans({}, 'backend') }}</button>
                            </div>
                        </div>
                    </div></div> </div>


            {{ form_end(form) }}
        </form></div>



