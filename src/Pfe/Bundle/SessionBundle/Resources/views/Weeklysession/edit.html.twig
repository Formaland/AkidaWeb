{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}

    <div class="col-md-6">

        <form  action="{{ path('weeklysession_update', { 'id': entity.id }) }}"  method="post">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-btns">
                        <a class="panel-close" href="#">

                            ×

                        </a>
                        <a class="minimize" href="#">

                            −

                        </a>
                    </div>
                    <h4 class="panel-title" align="center">   <font color="#008b8b" size="5%" align="left">

                            {{ 'sidebar.Modifier enseignant'|trans({}, 'backend') }}

                        </font>    </h4>

                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-sm-9">
                            {{ form_widget(edit_form.day) }}
                            {{ form_errors(edit_form.day) }}
                        </div>




                        <label class="col-sm-3 control-label">


                            {{ 'seanceheb.day'|trans({}, 'backend') }}

                        </label></div>
                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(edit_form.starttime) }}
                            {{ form_errors(edit_form.starttime) }}
                        </div>



                        <label class="col-sm-3 control-label">


                            {{ 'examen.heure deb'|trans({}, 'backend') }}

                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(edit_form.endtime) }}
                            {{ form_errors(edit_form.endtime) }}
                        </div>



                        <label class="col-sm-3 control-label">


                            {{ 'examen.heure fin'|trans({}, 'backend') }}

                        </label>

                    </div>




                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">

                                <p align="center"> <button type="submit" class="btn btn-success" id="validerenseignant"><i class="icon-ok icon-white" align="center"></i> {{ 'Liens.modifier'|trans({}, 'backend') }}</button></p>


                            </div>
                        </div>
                       </div></div> </div>


            {{ form_rest(edit_form) }}
        </form></div>





