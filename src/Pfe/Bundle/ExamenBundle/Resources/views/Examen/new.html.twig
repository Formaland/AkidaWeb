{% extends 'PfeWebBundle:Backend:layout.html.twig' %}


{% block content -%}

    <div class="col-md-6">

        <form  action="{{ path('examen_create') }}"  {{ form_enctype(form) }} method="post">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-btns">
                        <a class="panel-close" href="#">

                            ×

                        </a>
                        <a class="minimize" href="#">

                            −

                        </a>
                    </div>
                    <h4 class="panel-title" align="center"><font color="#008b8b" size="5%" align="left">

                            {{ 'sidebar.Ajouter examen'|trans({}, 'backend') }}</font>

                    </h4>

                </div>
                <div class="panel-body">
                    <div class="form-group">

                        <div class="col-sm-9">
                            <div > {{ form_widget(form.nameexamen) }}</div>
                            {{ form_errors(form.nameexamen) }}
                        </div>




                        <label class="col-sm-3 control-label">

                            <font color="red">

