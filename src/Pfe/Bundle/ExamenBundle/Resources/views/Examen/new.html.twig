                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <label class="col-sm-3 control-label">
                         <font color="black">

                                {{ 'user.description'|trans({}, 'backend') }}</font>

                        </label>

                    </div>


                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.students) }}
                            {{ form_errors(form.students) }}
                        </div>

                        <label class="col-sm-3 control-label">
                            <font color="red">
                                *

                            </font><font color="black">

                                {{ 'student.nom'|trans({}, 'backend') }}</font>

                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.typeexamens) }}
                            {{ form_errors(form.typeexamens) }}
                        </div>

                        <label class="col-sm-3 control-label">
                            <font color="red">
                                *

                            </font><font color="black">

                                {{ 'examen.typeexam'|trans({}, 'backend') }}</font>

                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.courses) }}
                            {{ form_errors(form.courses) }}
                        </div>

                        <label class="col-sm-3 control-label">
                            <font color="red">
                                *

                            </font><font color="black">

                                {{ 'cours.cours'|trans({}, 'backend') }}</font>

                        </label>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            {{ form_widget(form.commissions) }}
                            {{ form_errors(form.commissions) }}
                        </div>

                        <label class="col-sm-3 control-label">
                            <font color="red">
                                *

                            </font><font color="black">

                                {{ 'sidebar.Commission'|trans({}, 'backend') }}</font>

                        </label>

                    </div>

                    <div class="panel-footer">

                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3" >


                                <p>&nbsp;&nbsp;</p>
                               <button type="submit" class="btn btn-success" id="validerexamen"><i class="icon-ok icon-white"></i> {{ 'Liens.envoyer'|trans({}, 'backend') }}</button>
                                <button type="reset" class="btn btn-danger" id="validerapprenant"><i class="icon-ok icon-white"></i> {{ 'Liens.annuler'|trans({}, 'backend') }}</button>
                            </div>
                        </div>
                        <!--

